<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="35dp"
        android:layout_height="35dp"

        android:id="@+id/list_messages_message_left_image"
        android:layout_gravity="center_vertical"
        android:layout_alignParentBottom="false"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_messages_message_left_text"
        android:text="cool dsfsdfdsfdsfdsfdsfdsfdsfdsfds"
        android:layout_marginTop="3dp"
        android:background="@drawable/bubble_in"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/list_messages_message_left_image"
        android:layout_toEndOf="@+id/list_messages_message_left_image"
        android:layout_marginRight="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_messages_message_left_time"
        android:text="22:20"
        android:textSize="10sp"
        android:layout_below="@+id/list_messages_message_left_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp" />

</RelativeLayout>