<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/course_teacher"
        android:src="@drawable/ic_ucomplex"
        android:contentDescription="@string/progile_picture"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="17dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Имя Фамильев Отчествович"
        android:id="@+id/course_teacher_name"
        android:layout_toRightOf="@+id/course_teacher"
        android:layout_marginLeft="17dp"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:layout_marginTop="11dp" />

</RelativeLayout>