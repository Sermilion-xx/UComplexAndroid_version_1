<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:id="@+id/list_calendar_day_mark_subject"
        android:text="Исследование социально-экономических и политических процессов, лекционные"
        android:layout_gravity="center_vertical"
        android:textSize="14sp"
        android:paddingTop="5dp"
        android:layout_marginLeft="10dp"
        android:textColor="#222222"
        android:layout_weight="1"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_empty_url"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:id="@+id/list_calendar_day_mark_mark"/>

</LinearLayout>