<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_messages_message_right_text"
        android:background="@drawable/bubbleout"
        android:layout_marginTop="7dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:maxWidth="270dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_messages_message_right_time"
        android:textSize="11sp"
        android:layout_alignTop="@+id/list_messages_message_right_text"
        android:layout_toLeftOf="@+id/list_messages_message_right_text"
        android:layout_toStartOf="@+id/list_messages_message_right_text"
        android:layout_marginTop="6dp"
        android:layout_marginRight="10dp" />

</RelativeLayout>