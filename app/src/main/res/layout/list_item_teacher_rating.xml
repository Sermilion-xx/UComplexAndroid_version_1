<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/question"
        android:text="Сколько времени Вы уделяете подготовке к семинарам данного преподавателя?"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp" />

    <Button
        android:id="@+id/question_button_1"
        android:layout_width="32dp"
        android:layout_height="25dp"
        android:layout_below="@+id/question"
        android:layout_marginLeft="17dp"
        android:background="#E77272"
        android:text="1"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/question_button_2"
        android:layout_width="32dp"
        android:layout_height="25dp"
        android:background="#E77D72"
        android:text="2"
        android:layout_alignTop="@+id/question_button_1"
        android:layout_toRightOf="@+id/question_button_1"
        android:layout_toEndOf="@+id/question_button_1" />

    <Button
        android:id="@+id/question_button_3"
        android:layout_width="32dp"
        android:layout_height="25dp"
        android:background="#E78D72"
        android:text="3"
        android:layout_alignTop="@+id/question_button_2"
        android:layout_toRightOf="@+id/question_button_2"
        android:layout_toEndOf="@+id/question_button_2" />

    <Button
        android:id="@+id/question_button_4"
        android:layout_width="32dp"
        android:layout_height="25dp"
        android:background="#E7A472"
        android:text="4"
        android:layout_alignTop="@+id/question_button_3"
        android:layout_toRightOf="@+id/question_button_3"
        android:layout_toEndOf="@+id/question_button_3" />

    <Button
        android:id="@+id/question_button_5"
        android:layout_width="32dp"
        android:layout_height="25dp"
        android:background="#E8B472"
        android:text="5"
        android:layout_alignTop="@+id/question_button_4"
        android:layout_toRightOf="@+id/question_button_4"
        android:layout_toEndOf="@+id/question_button_4" />
    <Button
        android:id="@+id/question_button_6"
        android:layout_width="32dp"
        android:layout_height="25dp"
        android:background="#E8C272"
        android:text="6"
        android:layout_alignTop="@+id/question_button_5"
        android:layout_toRightOf="@+id/question_button_5"
        android:layout_toEndOf="@+id/question_button_5" />

    <Button
        android:id="@+id/question_button_7"
        android:layout_width="32dp"
        android:layout_height="25dp"
        android:background="#E8C272"
        android:text="7"
        android:layout_alignTop="@+id/question_button_6"
        android:layout_toRightOf="@+id/question_button_6"
        android:layout_toEndOf="@+id/question_button_6" />

    <Button
        android:id="@+id/question_button_8"
        android:layout_width="32dp"
        android:layout_height="25dp"
        android:background="#E6E773"
        android:text="8"
        android:layout_alignTop="@+id/question_button_7"
        android:layout_toRightOf="@+id/question_button_7"
        android:layout_toEndOf="@+id/question_button_7" />

    <Button
        android:id="@+id/question_button_9"
        android:layout_width="32dp"
        android:layout_height="25dp"
        android:background="#c3e874"
        android:text="9"
        android:layout_alignTop="@+id/question_button_8"
        android:layout_toRightOf="@+id/question_button_8"
        android:layout_toEndOf="@+id/question_button_8" />

    <Button
        android:id="@+id/question_button_10"
        android:layout_width="32dp"
        android:layout_height="25dp"
        android:background="#89e874"
        android:text="10"
        android:layout_alignTop="@+id/question_button_9"
        android:layout_toRightOf="@+id/question_button_9"
        android:layout_toEndOf="@+id/question_button_9" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/question_hint"
        android:text="1 - не посещаю совсем, 10 - посещаю 90% занятий и более"
        android:layout_below="@+id/question_button_1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="12dp"
        android:paddingBottom="18dp"/>

</RelativeLayout>