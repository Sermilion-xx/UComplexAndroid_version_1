<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:padding="10dp"
    android:descendantFocusability="blocksDescendants">


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/ic_no_image"
        android:id="@+id/list_users_item_image"
        />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:paddingRight="20dp"
        android:layout_height="match_parent"
        android:id="@+id/list_user_item_name"
        android:layout_toRightOf="@+id/list_users_item_image"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Техподдержка"
            android:lines="1"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            android:textColor="#000000"
            android:id="@+id/list_users_item_textview1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Администратор"
            android:textSize="12sp"
            android:id="@+id/list_users_item_textview2"/>
    </LinearLayout>

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_more"
        android:id="@+id/list_users_item_menu_button"
        />


</RelativeLayout>