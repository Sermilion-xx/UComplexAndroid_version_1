<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:gravity="right"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bubbleout"
        android:id="@+id/message"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_messages_message_right_text"
            android:layout_marginTop="3dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:maxWidth="200dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:text="проппроппропорпропропорпропропропорпорпорпорпроролроролролролрлоролролрлоролролролрлорлорлороролрлорлорлорлорлорлорло"
            android:layout_marginBottom="3dp" />

    </LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_messages_message_right_time"
        android:textSize="11sp"
        android:layout_below="@+id/message"
        android:layout_alignParentRight="true"
        android:text="12121212"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp" />

</RelativeLayout>