<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/course_material_listview_item_image"
        android:src="@mipmap/ic_file"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/course_material_listview_item_textview1"
        android:text="Название какого-то беспонтового документа dsfdsf dsfsdf sdf ds fs dfds f"
        android:lines="1"
        android:textColor="#000000"
        android:textSize="14sp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/course_material_listview_item_textview2"
        android:text="Имя Крутого Препода"
        android:lines="1"
        android:textSize="12sp"
        android:layout_marginTop="5dp"/>
        </LinearLayout>
</LinearLayout>