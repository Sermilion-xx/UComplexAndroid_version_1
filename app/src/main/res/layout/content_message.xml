<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activities.MessagesActivity"
    tools:showIn="@layout/activity_message"
    android:background="#eeeeee">

    <FrameLayout
        android:id="@+id/message_pane"
        android:layout_height="match_parent"
        android:minHeight="300dp"
        android:layout_width="match_parent"
        android:foregroundGravity="fill"
        android:layout_above="@+id/linearLayout">

        <ListView
            android:animateLayoutChanges="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/list_messages_listview"
            android:dividerHeight="0dp"
            android:divider="@null"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp">
        </ListView>

    </FrameLayout>


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="bottom"
        android:id="@+id/linearLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"


>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.64"
            android:hint="Введите сообщение"
            android:layout_marginLeft="5dp"
            android:id="@+id/messages_text" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="File"
            android:id="@+id/messages_file_button" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:id="@+id/messages_send_button"
            android:layout_marginRight="5dp"/>

    </LinearLayout>

</RelativeLayout>
