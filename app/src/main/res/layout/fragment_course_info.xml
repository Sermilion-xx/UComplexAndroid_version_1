<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">




    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/ic_no_image"
        android:id="@+id/course_info_teacher_image"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"

            android:id="@+id/course_info_teacher_name"
            android:textSize="16sp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="110dp"
            android:layout_alignParentLeft="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/course_info_course_name"
        android:textSize="16sp"
        android:layout_below="@id/course_info_teacher_name"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/department_string"
        android:id="@+id/course_info_course_department_label"
        android:textSize="16sp"
        android:layout_below="@id/course_info_course_name"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/course_info_course_department_name"
        android:textSize="16sp"
        android:layout_below="@id/course_info_course_department_label"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/average_mark_string"
        android:id="@+id/course_info_course_average_mark_label"
        android:textSize="16sp"
        android:layout_below="@id/course_info_course_department_name"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:id="@+id/course_info_course_average_mark_value"
        android:textSize="16sp"
        android:layout_below="@id/course_info_course_department_name"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="135dp"
        android:layout_gravity="center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/attendance_string"
        android:id="@+id/course_info_course_attendance_label"
        android:textSize="16sp"
        android:layout_below="@id/course_info_course_average_mark_label"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:id="@+id/course_info_course_attendance_value"
        android:textSize="16sp"
        android:layout_below="@id/course_info_course_average_mark_value"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="240dp"
        android:layout_gravity="center_vertical" />


</RelativeLayout>