<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@mipmap/ic_no_image"
        android:id="@+id/course_info_teacher_image"
        android:layout_marginTop="43dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/course_info_teacher_name"
            android:textSize="20sp"
            android:layout_below="@+id/course_info_teacher_image"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/course_info_course_name"
        android:text="Название предмета"
        android:textSize="16sp"
        android:layout_below="@+id/course_info_separator"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"

        android:layout_gravity="center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/department_string"
        android:id="@+id/course_info_course_department_label"
        android:textSize="16sp"
        android:layout_below="@id/course_info_course_name"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/course_info_course_department_name"
        android:textSize="16sp"
        android:layout_gravity="center_vertical"
        android:layout_alignTop="@+id/course_info_course_department_label"
        android:layout_alignRight="@+id/course_info_course_attendance_label"
        android:layout_alignEnd="@+id/course_info_course_attendance_label" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/average_mark_string"
        android:id="@+id/course_info_course_average_mark_label"
        android:textSize="16sp"
        android:layout_below="@id/course_info_course_name"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/course_info_course_average_mark_value"
        android:textSize="16sp"
        android:layout_below="@id/course_info_course_name"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="145dp"
        android:layout_gravity="center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/attendance_string"
        android:id="@+id/course_info_course_attendance_label"
        android:textSize="16sp"
        android:layout_below="@id/course_info_course_average_mark_label"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/course_info_course_attendance_value"
        android:textSize="16sp"
        android:layout_below="@id/course_info_course_average_mark_value"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="245dp"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="30dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:text="Сообщение"
        android:id="@+id/course_info_button_message"
        android:background="#7bc5de"
        android:textColor="#fbfefe"
        android:layout_marginTop="30dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:text="В друзья"
        android:id="@+id/course_info_button_to_friend"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/course_info_button_message"
        android:textColor="#fbfefe"
        android:background="#7dc9e2"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:text="Заблокировать"
        android:id="@+id/course_info_button_block"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/course_info_button_to_friend"
        android:textColor="#fbfefe"
        android:background="#7dc9e2"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/course_info_mail"
        android:textSize="16sp"
        android:layout_below="@+id/course_info_teacher_name"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\@"
        android:id="@+id/course_info_at_sign"
        android:layout_alignBottom="@+id/course_info_mail"
        android:layout_marginLeft="20dp"
        android:textSize="18sp"
        android:textColor="#7ac9e4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#"
        android:layout_below="@+id/course_info_at_sign"
        android:id="@+id/course_info_user_icon"
        android:layout_marginLeft="20dp"
        android:textColor="#4da8b6"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/course_info_position"
        android:layout_below="@+id/course_info_mail"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="40dp"
        android:textIsSelectable="false" />

    <View
        android:layout_width="390dp"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/course_info_separator"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/course_info_position_2"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#"
        android:id="@+id/course_info_user_icon_2"
        android:layout_below="@+id/course_info_position"
        android:layout_marginTop="5dp"
        android:textColor="#4da8b6"
        android:layout_marginLeft="20dp"

         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/course_info_position_2"
        android:layout_below="@+id/course_info_position"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp" />


</RelativeLayout>
</ScrollView>