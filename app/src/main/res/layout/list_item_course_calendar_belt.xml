<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content"
    >

    <ImageView android:layout_width="37dp"
        android:layout_height="37dp"
        android:src="@mipmap/ic_no_image"
        android:id="@+id/course_calendar_belt_listview_item_image"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="17dp" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="17dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/course_calendar_belt_listview_item_textview1"
        android:text="Название какого-то беспонтового документа dsfdsf dsfsdf sdf ds fs dfds f"
        android:lines="1"
        android:textColor="#000000"
        android:textSize="16sp" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/course_calendar_belt_listview_time_icon"
            android:lines="1"
            android:textSize="10sp"
            android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/course_calendar_belt_listview_item_textview2"
        android:text="Время"
        android:lines="1"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>