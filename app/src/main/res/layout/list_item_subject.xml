<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="50dp"
    android:background="#ffffff"

>

    <TextView
        android:layout_width="wrap_content"
        android:maxWidth="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/subject_listview_item_text1"
        android:text="Название крутого предмета"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_toLeftOf="@+id/subject_listview_item_text2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/subject_listview_item_text2"
        android:text="Зачет"
        android:background="@drawable/textview_border_round_corner"
        android:layout_alignParentRight="true"
        android:textSize="12sp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="13dp"
        />


</RelativeLayout>